// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space w m": "workspace::CloseInactiveTabsAndPanes",
      "space w h": "workspace::ActivatePaneLeft",
      "space w l": "workspace::ActivatePaneRight",
      "space w v": "pane::SplitVertical",
      "space w d": "pane::CloseActiveItem",
    },
  },
  {
    "context": "(Workspace || (Editor && vim_mode == normal)) && os != macos",
    "bindings": {
      "ctrl-p": "file_finder::Toggle",
      "ctrl-w": "pane::CloseActiveItem",
    },
  },
  {
    "context": "(Workspace || (Editor && vim_mode == normal)) && os == macos",
    "bindings": {
      "cmd-p": "file_finder::Toggle",
      "cmd-w": "pane::CloseActiveItem",
    },
  },
  {
    "context": "Editor && vim_mode == normal && os == macos",
    "bindings": {
      "cmd-f": "vim::PageDown",
      "cmd-b": "vim::PageUp",
      "cmd-]": "editor::GoToDefinition",
    },
  },
  {
    "context": "(VimControl && !menu)",
    "bindings": {
      "k": [
        "vim::Up",
        {
          "display_lines": true,
        },
      ],
      "j": [
        "vim::Down",
        {
          "display_lines": true,
        },
      ],
    },
  },
  {
    "context": "(Workspace || Editor) && os == macos",
    "bindings": {
      "cmd-s": "workspace::SaveAll",
    },
  },
  {
    "context": "(Workspace || Editor) && os != macos",
    "bindings": {
      "ctrl-s": "workspace::SaveAll",
    },
  },
  {
    "bindings": {
      "ctrl-alt-f2": "debugger::Stop",
    },
  },
  {
    "context": "Terminal && os == macos",
    "bindings": {
      "cmd-d": ["terminal::SendKeystroke", "ctrl-d"],
    },
  },
]
